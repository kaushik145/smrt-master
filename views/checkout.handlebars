<div class="container">
	
	<div class="row">

		<div class="col-sm-7">
			<br>
			<img src="./images/logo.jpg" alt="Service Request App">
		</div>
		<div class="col-sm-5">
			<h3><b>Service Maintenance Request Tracker</b></h3>
        	<p><i>by Kaushik Devulapalli</i></p>
			<p class="right"><a href="/admin">Admin</a>  |  <a href="/usercrud">Activity</a>  |  <a href="/crud">Assign Request<a/>  |  <a href="/checkout">User Checkout Request</a></p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-2">
		</div>
	</div>

	<div class="">
		<div class="col-sm-8">
			<div class="container scroll">
				<table class="table table-hover table-nonfluid">
					<thead>
						<tr>
							<th>Service Request ID</th>
			                <th>Request Details</th>
			                <th>Requested By</th>
			                <th>Apartment Number</th>
			                <th>Assigned to</th>
			                <th>Status</th>
			              </tr>
					</thead>
					<tbody class="">
						{{#each services}}
						{{!-- 			 		{{#if this.available}} --}}
						
						<tr tabindex="1" >

							 <td>{{this.service_name}}</td>
                			 <td>{{this.request_details}}</td>
                			 <td>{{this.request_number}}</td>
                			 <td>{{this.apartment_number}}</td>
                			 <td>{{this.assigned_to}}</td>
                             <td>{{this.status}}</td>

							<td>
								<form action="/{{this.id}}?_method=DELETE" method="POST" class="pull-left">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-danger btn-size" type="submit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
								</form>

								<form action="/{{this.id}}?_method=PUT" method="POST" class="pull-right">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-success btn-size" type="submit"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
								</form>
							</td>
						</tr>
						{{!-- {{/if}} --}}
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	
	<div class="col-sm-2">
	</div>
</div>
<div class="container">
	<div class="row">
	</div>
</div>
