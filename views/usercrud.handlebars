<div class="container">
	
	
	<div class="row">
		<div class="col-sm-7">
			<br>
			<img src="./images/logo.jpg" alt="Service Maintenance Request App">
		</div>
		<div class="col-sm-5">
			<br/><br/>
            <h3><b>Service Maintenance Request Tracker</b></h3>
            <p><i>by Kaushik Devulapalli</i></p>
			<p class="right"><a href="/admin">Admin</a>  |  <a href="/usercrud">Activity</a>  |  <a href="/crud">Assign Requests<a/>  |  <a href="/checkout">User Checkout Requests</a></p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-2">
		</div>
	</div>
	<div class=""><h2>Checkout List</h2>
		<br>
		<div class="col-sm-8">
			<div class="container scroll">
				<table class="table table-hover table-nonfluid">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>User NetID</th>
							<th>Service ID</th>
							<th>Request Date</th>
							<th>Due Date</th>
						</tr>
					</thead>
					<tbody class="">
						{{#each checkout}}
						<tr tabindex="1">
							<td>{{this.name}}</td>    
							<td>{{this.email}}</td>
							<td>{{this.netID}}</td>
							<td>{{this.service_id}}</td>
							<td>{{this.request_date}}</td>
							<td>{{this.due_date}}</td>
							<td>
								
								<form action="/{{this.id}}?_method=DELETE" method="POST" class="pull-left">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-danger btn-size" type="submit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
								</form>
								<form action="/{{this.id}}?_method=PUT" method="POST" class="pull-right">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-success btn-size" type="submit"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
								</form>
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	
	<div class="col-sm-2">
	</div>
</div>
<BR>